<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500&display=swap" rel="stylesheet">
    <link href="css/login.css" rel="stylesheet">
    <title>Login Form</title>
   @*  <style>
        .error {
            color: red;
            display: none;
        }
    </style> *@
</head>
<body>
   
    <div class="container">
        <form id="loginForm" action="/Login/LoginInsert" method="post">
            <img src="~/Logo Dikey Medium-Mor.png" alt="Fabit Bilgi Teknolojileri"><br>
            <input type="text" name="username" id="username" placeholder="Username" autofocus><br>
            @* <span id="usernameError" class="error">Username is required</span><br> *@
            <input type="password" name="password" id="password" placeholder="Password"><br>
            @* <span id="passwordError" class="error">Password is required</span><br> *@
            <span id="userpasswordError" class="error">Lütfen alanları doldurunuz!</span><br>
            <input type="submit" value="Login"><br>
            <a href="#">Forgot Password?</a>
        </form>
        <div class="drops">
            <div class="drop drop-1"></div>
            <div class="drop drop-2"></div>
            <div class="drop drop-3"></div>
            <div class="drop drop-4"></div>
            <div class="drop drop-5"></div>
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            console.log('DOMContentLoaded event fired');
            const loginForm = document.getElementById('loginForm');
            loginForm.addEventListener('submit', function (event) {
                console.log('Form submitted!');
                let valid = true;

                const username = document.getElementById('username');
                // const usernameError = document.getElementById('usernameError');
                const password = document.getElementById('password');
                // const passwordError = document.getElementById('passwordError');
                const userpasswordError = document.getElementById('userpasswordError');


                if (username.value.trim() === '' || password.value.trim() === '') {
                    userpasswordError.style.display = 'block';
                    valid = false;
                } else {
                    // usernameError.style.display = 'none';
                    userpasswordError.style.display = 'none';
                }

                // if (password.value.trim() === '') {
                //     passwordError.style.display = 'block';
                //     valid = false;
                // } else {
                //     passwordError.style.display = 'none';
                // }

                if (!valid) {
                    event.preventDefault();
                }
            });
        });
    </script>
</body>
</html>
